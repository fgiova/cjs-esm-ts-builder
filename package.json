{
  "name": "@fgiova/cjs-esm-ts-builder",
  "version": "1.1.0",
  "description": "Build tool for CJS and ESM modules in TypeScript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fgiova/cjs-esm-ts-builder.git"
  },
  "author": "Francesco Giovannini <fgiova@fgiova.com>",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "build",
    "typescript",
    "build-tool",
    "esmodules",
    "esm",
    "cjs",
    "commonjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "builder.mjs"
  ],
  "bin": {
    "esmBuilder": "./builder.mjs"
  },
  "scripts": {
    "build": "ts-node build.ts",
    "lint": "eslint"
  },
  "dependencies": {
    "arg": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.13.10",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
